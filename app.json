{
  "expo": {
    "name": "MiloKhelo",
    "slug": "app-milokhelo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.milokhelo.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification", "remote-notification"],
        "NSLocationWhenInUseUsageDescription": "MiloKhelo needs your location to show nearby venues and help you find sports facilities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "MiloKhelo needs your location to show nearby venues and send you location-based match notifications.",
        "NSCameraUsageDescription": "MiloKhelo needs access to your camera to take photos for your profile and team logos.",
        "NSPhotoLibraryUsageDescription": "MiloKhelo needs access to your photo library to select photos for your profile and team logos.",
        "NSPhotoLibraryAddUsageDescription": "MiloKhelo needs permission to save photos to your library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.milokhelo.app",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "scheme": "milokhelo",
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6200ee",
          "sounds": ["./assets/notification-sound.wav"],
          "defaultChannel": {
            "name": "Default",
            "importance": "max",
            "vibrationPattern": [0, 250, 250, 250],
            "lightColor": "#6200ee"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0ba80ba2-1819-4842-ad4b-c73c7f391c88"
      },
      "router": {}
    },
    "owner": "milo-khelo"
  }
}
